---
import '../styles/styles.css';
import LogosLayout from '../components/shared/logosLayout.astro';

---
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>Iniciar Sesión</title>
    <!-- Favicon básico -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon_io/favicon.ico">
    <!-- Para diferentes tamaños de favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon_io/favicon-16x16.png">
</head>
    <LogosLayout>
    </LogosLayout>
<body>
    <div class="container">
        <div class="login-card">
            <h2>Iniciar sesión</h2>
            <p class="subtitle">Ingrese los Siguientes datos.</p>

            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" id="email" required>
                </div>

                <div class="form-group">
                    <div class="password-header">
                        <label for="password">Contraseña</label>
                    </div>
                    <input type="password" id="password" required>
                    <a href="/recuperarPassword" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="login-btn">Acceso</button>

                <button type="button" class="google-btn">
                    <img src="data:image/svg+xml;base64,"
                        alt="Google logo">
                    Iniciar sesión con Google
                </button>
            </form>
            <p class="signup-text">
                ¿No tienes una cuenta?<a href="/registro"> Registrate</a>
            </p>
            <p class="copyright">© 2025 XDevLab</p>
        </div>
    </div>
    <script src="../components/auth/LoginForm.ts"></script>
</body>
</html>
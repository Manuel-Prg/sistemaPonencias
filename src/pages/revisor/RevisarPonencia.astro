import '../styles/stylesRevisarPonencia.css';
import '../styles/logos.css';
---
<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Revisar Ponencia</title>
    <!-- Favicon básico -->
    <link rel ="icon" type="image/x-icon" href="/public/favicon/favicon_io/favicon.ico">
    <!-- Para diferentes tamaños de favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/public/favicon/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/favicon/favicon_io/favicon-16x16.png">
</head>
<header class="header">
  <div class="logo">
		<img src="/Logos UJAT/Logos UJAT/Logo 1 blanco.png" alt="Logo-ujat" class="logo-ujat">
		<img src="/logo-dacity/logo-negro_bordes_blancos-sinFondo.png" alt="Logo-dacity" class="logo-dacity" />
		<img src="/logo_mujeres/logo_mueres_blanco.png" alt="Logo-mujeres" class="woman-silhouette" />
		<img src="/icon-logo.png" alt="Logo-dev" class="logo-dev" />
  </div>
  <div class="header-buttons">
    <button class="header-btn" id="logout-btn" title="Regresar">
      <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
        <path d="M647-440H160v-80h487L423-744l57-56 320 320-320 320-57-56 224-224Z" />
      </svg>
      <span>Regresar</span>
    </button>
  </div>
</header>

<!-- Bottom Navigation for Mobile -->
<nav class="bottom-nav">
  <div class="bottom-nav-items">
    <a href="#" class="bottom-nav-item" id="regresar-btn-mobile">
      <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#e8eaed">
        <path d="M647-440H160v-80h487L423-744l57-56 320 320-320 320-57-56 224-224Z" />
      </svg>
      <span>Regresar</span>
    </a>
  </div>
</nav>

<body>
  <div class="container">
    <!-- Tarjeta de ponencia (izquierda) -->
    <div class="ponencia-card">
      <h2 class="title">¿Que tan fuerte es Steve de Minecraft?</h2>
      <div class="content">
        <!-- Contenido de la ponencia -->
      </div>
      <div class="action-buttons">
        <button class="btn btn-accept">Aceptar</button>
        <button class="btn btn-reject">Rechazar</button>
        <button class="btn btn-accept-with-obs">Aceptar con observaciones</button>
      </div>
    </div>

    <!-- Área de observaciones (derecha) -->
    <div class="comentarios-card" style="display: none;">
      <h2 class="title">Observaciones</h2>
      <textarea id="dialogComments" placeholder="Escriba sus observaciones aquí..."></textarea>
      <div class="dialog-buttons">
        <button class="btn btn-save">Guardar</button>
        <button class="btn btn-cancel">Cancelar</button>
      </div>
    </div>
  </div>

  <div id="dialogOverlay" class="dialog-overlay" style="display: none;">
    <div class="dialog">
      <h2 id="dialogTitle"></h2>
      <textarea id="dialogComments" placeholder="Escriba sus comentarios aquí"></textarea>
      <div class="dialog-buttons">
        <button id="dialogAccept">Aceptar</button>
        <button id="dialogCancel">Cancelar</button>
      </div>
    </div>
  </div>
</body>
</html>
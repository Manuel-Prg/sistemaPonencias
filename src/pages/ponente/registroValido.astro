---
import "../../styles/pages/ponente/registroValido.css";
import "../../styles/pages/main.css";
import "../../styles/components/logos.css";
import HeaderLayout from "../../components/shared/headerLayout.astro";
import BotonMobile from "../../components/shared/botonMobile.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Registro Exitoso</title>
        <!-- Favicon básico -->
        <link
            rel="icon"
            type="image/x-icon"
            href="/favicon/favicon_io/favicon.ico"
        />
        <!-- Para diferentes tamaños de favicon -->
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon/favicon_io/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon/favicon_io/favicon-16x16.png"
        />
    </head>
    <HeaderLayout />
    <!-- Bottom Navigation for Mobile -->
    <BotonMobile />
    <body>
        <div class="container">
            <div class="success-card">
                <h1>Se ha registrado con éxito tu ponencia</h1>

                <p class="description">
                    Un cuerpo académico está revisando tu ponencia y serás
                    notificado (a) mediante correo electrónico, por mientras te
                    dejamos otras opciones que puedes hacer en lo que te
                    avisamos
                </p>

                <div class="action-cards">
                    <div id="main-content">
                        <div class="card" data-action="revisar">
                            <div class="icon">
                                <svg viewBox="0 0 24 24" width="24" height="24">
                                    <path
                                        d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z"
                                    ></path>
                                </svg>
                            </div>
                            <h3>Revisar el estado</h3>
                            <p>
                                Verifica el progreso de tu ponencia en tiempo
                                real.
                            </p>
                        </div>
                    </div>

                    <div class="card" data-action="editar">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path
                                    d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"
                                ></path>
                            </svg>
                        </div>
                        <h3>Editar mi ponencia</h3>
                        <p>
                            Tienes 48 horas para realizar cambios si es
                            necesario.
                        </p>
                    </div>

                    <div class="card" data-action="descargar">
                        <div class="icon">
                            <svg viewBox="0 0 24 24" width="24" height="24">
                                <path
                                    d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z"
                                ></path>
                            </svg>
                        </div>
                        <h3>Descargar comprobante</h3>
                        <p>
                            Obtén un archivo PDF con todos los detalles de tu
                            envío.
                        </p>
                    </div>
                </div>

                <div class="share-section">
                    <h4>Compartir el evento</h4>
                    <div class="social-icons">
                        <button
                            class="social-icon"
                            data-type="copy"
                            aria-label="Copiar enlace"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"
                                ></path>
                                <path
                                    d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"
                                ></path>
                            </svg>
                        </button>
                        <button
                            class="social-icon"
                            data-type="linkedin"
                            aria-label="Compartir en LinkedIn"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"
                                >
                                </path>
                                <rect x="2" y="9" width="4" height="12"></rect>
                                <circle cx="4" cy="4" r="2"></circle>
                            </svg>
                        </button>
                        <button
                            class="social-icon"
                            data-type="twitter"
                            aria-label="Compartir en Twitter"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"
                                >
                                </path>
                            </svg>
                        </button>
                        <button
                            class="social-icon"
                            data-type="facebook"
                            aria-label="Compartir en Facebook"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                            >
                                <path
                                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                                ></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            import { initializeDashboard } from "../../components/ponente/dashboard";

            // Ejecutar la inicialización cuando el DOM esté listo
            document.addEventListener("DOMContentLoaded", async () => {
                try {
                    await initializeDashboard();
                    console.log("Dashboard initialized successfully");
                } catch (error) {
                    console.error("Error initializing dashboard:", error);
                }
            });
        </script>
    </body>
</html>

---
import '../styles/styles.css';

---
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>Iniciar Sesión</title>
    <!-- Favicon básico -->
    <link rel ="icon" type="image/x-icon" href="/public/favicon/favicon_io/favicon.ico">
    <!-- Para diferentes tamaños de favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/public/favicon/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/favicon/favicon_io/favicon-16x16.png">
</head>
<header>
    <div class="logo">
		<img src="/Logos UJAT/Logos UJAT/Logo 1 blanco.png" alt="Logo-ujat" class="logo-ujat">
		<img src="/logo-dacity/logo-negro_bordes_blancos-sinFondo.png" alt="Logo-dacity" class="logo-dacity" />
		<img src="/logo_mujeres/logo_mueres_blanco.png" alt="Logo-mujeres" class="woman-silhouette" />
		<img src="/icon-logo.png" alt="Logo-dev" class="logo-dev" />
    </div>
</header>
<body>
    <div class="container">
        <div class="login-card">
            <h2>Iniciar sesión</h2>
            <p class="subtitle">Ingrese los Siguientes datos.</p>

            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" id="email" required>
                </div>

                <div class="form-group">
                    <div class="password-header">
                        <label for="password">Contraseña</label>
                    </div>
                    <input type="password" id="password" required>
                    <a href="#" class="forgot-password">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="login-btn">Acceso</button>

                <button type="button" class="google-btn">
                    <img src="data:image/svg+xml;base64,"
                        alt="Google logo">
                    Iniciar sesión con Google
                </button>
            </form>
            <p class="signup-text">
                ¿No tienes una cuenta?<a href="/autenticacion/registro"> Registrate</a>
            </p>
            <p class="copyright">© 2025 XDevLab</p>
        </div>
    </div>

    <script src="../../components/auth/loginform.ts"></script>
</body>
</html>
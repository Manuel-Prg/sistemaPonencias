---
import "../styles/base/variables.css";
import "../styles/base/reset.css";
import "../styles/components/buttons.css";
import "../styles/components/form.css";
import "../styles/pages/auth/registro.css";
import "../styles/components/logos.css";
import "../styles/components/notifications.css";
import LogosLayout from "../components/shared/logosLayout.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Registrarse</title>
        <!-- Favicon básico -->
        <link
            rel="icon"
            type="image/x-icon"
            href="/favicon/favicon_io/favicon.ico"
        />
        <!-- Para diferentes tamaños de favicon -->
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon/favicon_io/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon/favicon_io/favicon-16x16.png"
        />
    </head>
    <LogosLayout />
    <body>
        <div class="container">
            <div class="register-card">
                <h2>Registrarse</h2>
                <p class="subtitle">Ingrese los Siguientes datos.</p>

                <form id="registerForm">
                    <div class="form-group">
                        <label for="name">Nombre*</label>
                        <input type="text" id="name" required />
                    </div>

                    <div class="form-group">
                        <label for="email">Correo electrónico*</label>
                        <input type="email" id="email" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Contraseña*</label>
                        <input type="password" id="password" required />

                        <!-- Password Strength Indicator -->
                        <div class="password-strength-container">
                            <div class="strength-bar">
                                <div class="strength-fill"></div>
                            </div>
                            <span class="strength-text"></span>
                        </div>

                        <!-- Password Requirements -->
                        <ul class="password-requirements">
                            <li data-requirement="length">
                                <span class="check-icon">○</span>
                                Mínimo 8 caracteres
                            </li>
                            <li data-requirement="uppercase">
                                <span class="check-icon">○</span>
                                Una letra mayúscula
                            </li>
                            <li data-requirement="lowercase">
                                <span class="check-icon">○</span>
                                Una letra minúscula
                            </li>
                            <li data-requirement="number">
                                <span class="check-icon">○</span>
                                Un número
                            </li>
                            <li data-requirement="special">
                                <span class="check-icon">○</span>
                                Un carácter especial (!@#$%^&*)
                            </li>
                        </ul>

                        <!-- Password Help Text -->
                        <div class="password-help" id="passwordHelp"></div>
                    </div>

                    <button type="submit" class="register-btn"
                        >Registrarse</button
                    >

                    <button type="button" class="google-btn">
                        <img
                            src="data:image/svg+xml;base64,"
                            alt="Google logo"
                        />
                        Registrarse con Google
                    </button>
                </form>

                <p class="login-text">
                    ¿Ya tienes una cuenta? <a href="/">Iniciar sesión</a>
                </p>

                <p class="copyright">© 2025 XDevLab</p>
            </div>
        </div>
        <script src="../components/auth/SigninForm.ts"></script>
    </body>


</html>

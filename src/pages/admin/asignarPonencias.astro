---
import AdminLayout from '../../components/shared/AdminLayout.astro';
import '../../styles/targetAdmin.css';
---

<AdminLayout>
  <div class="admin-section">
    <div class="section-header">
      <h1 class="section-title">Asignar Ponencias</h1>
      <button class="admin-btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
        Reasignar Revisor 
      </button>
    </div>

    <div class="presentations-list" id="presentations-container">
      <!-- Las presentation-cards se cargarán aquí dinámicamente -->
      <div class="loading">Cargando revisores...</div>
    </div>
  </div>
</AdminLayout>

<script src="../scripts/AdminRevisorPanel.ts"></script>
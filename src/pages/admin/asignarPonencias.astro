---
import AdminLayout from "../../components/shared/AdminLayout.astro";
import "../../styles/pages/admin/targetAdmin.css";
---

<AdminLayout>
  <div class="admin-section">
    <div class="section-header">
      <h1 class="section-title">Asignar Ponencias</h1>
      <button class="admin-btn">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-plus"
          ><path d="M5 12h14"></path><path d="M12 5v14"></path></svg
        >
        Reasignar Revisor
      </button>
    </div>

    <div class="presentations-list" id="presentations-container">
      <!-- Las presentation-cards se cargarán aquí dinámicamente -->
      <div class="loading">Cargando revisores...</div>
    </div>
  </div>
</AdminLayout>

<script src="../../scripts/admin/AdminRevisorPanel.ts"></script>

<style>
  /* Estilos para el modal de asignación - Tema System Gradient */
  :global(.modal-overlay) {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7); /* Darker overlay for better contrast */
    backdrop-filter: blur(5px);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  :global(.modal-content) {
    background: linear-gradient(135deg, #5170ff, #ff66c4);
    border-radius: 12px;
    width: 90%;
    max-width: 600px;
    max-height: 85vh;
    display: flex;
    flex-direction: column;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    color: white;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.2);
    animation: modalFadeIn 0.3s ease-out;
  }

  @keyframes modalFadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  :global(.modal-header) {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  :global(.modal-header h3) {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
  }

  :global(.close-modal) {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: white;
    transition: all 0.2s;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    padding: 0;
  }

  :global(.close-modal:hover) {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
  }

  :global(.modal-body) {
    padding: 1.5rem 2rem;
    overflow-y: auto;
  }

  :global(.ponencias-selector) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  :global(.list-group) {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  :global(.list-item) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem;
    background: rgba(255, 255, 255, 0.1); /* Glass effect */
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    transition: all 0.2s;
  }

  :global(.list-item:hover) {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  :global(.ponencia-info) {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    padding-right: 1.5rem;
  }

  :global(.ponencia-info strong) {
    color: white;
    font-size: 0.95rem;
    line-height: 1.4;
    font-weight: 600;
  }

  :global(.ponencia-info small) {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
    text-transform: capitalize;
  }

  :global(.assign-btn) {
    padding: 0.5rem 1.25rem;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    white-space: nowrap;
  }

  :global(.assign-btn:hover) {
    background: rgba(255, 255, 255, 0.3);
    transform: translateY(-1px);
  }

  :global(.loading) {
    text-align: center;
    padding: 2rem;
    color: rgba(255, 255, 255, 0.8);
  }

  :global(.error) {
    color: #ffd1d1;
    text-align: center;
    background: rgba(255, 0, 0, 0.1);
    padding: 1rem;
    border-radius: 8px;
  }
</style>

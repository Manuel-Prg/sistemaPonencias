---
import '../styles/vistaAdmin.css';
import '../scripts/admin';
---
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración</title>
    <!-- Favicon básico -->
    <link rel="icon" type="image/x-icon" href="/favicon/favicon_io/favicon.ico">
    <!-- Para diferentes tamaños de favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon_io/favicon-16x16.png">
</head>

<body>
    <!-- Botón para mostrar/ocultar el sidebar en móvil -->
    <button id="sidebarToggle" class="sidebar-toggle">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 12h18M3 6h18M3 18h18"/>
        </svg>
    </button>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <h2>Panel Admin</h2>
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li>
                    <a href="#" class="sidebar-link active">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                        </svg>
                        <span>Gestión de Usuarios</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="sidebar-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <rect x="3" y="3" width="18" height="18" rx="2"/>
                            <path d="M3 9h18"/>
                        </svg>
                        <span>Salas de Ponencias</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="sidebar-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                        </svg>
                        <span>Asignar Ponencias</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="sidebar-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/>
                        </svg>
                        <span>Asignar Salas</span>
                    </a>
                </li>
                <li>
                    <a href="#" class="sidebar-link">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="9" cy="7" r="4"/>
                            <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        </svg>
                        <span>Asignar Moderadores</span>
                    </a>
                </li>
            </ul>
        </nav>
    </aside>

    <div class="main-wrapper">
        <header class="header">
            <div class="logos-container">
                <img src="/Logos UJAT/Logos UJAT/Logo 1 blanco.png" alt="Logo-ujat" class="logo-ujat">
                <img src="/logo-dacity/logo-negro_bordes_blancos-sinFondo.png" alt="Logo-dacity" class="logo-dacity" />
                <img src="/logo_mujeres/logo_mueres_blanco.png" alt="Logo-mujeres" class="woman-silhouette" />
                <img src="/icon-logo.png" alt="Logo-dev" class="logo-dev" />
            </div>
            <div class="header-buttons">
                <button class="header-btn" id="logout-btn">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                        stroke-linejoin="round">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                        <polyline points="16 17 21 12 16 7" />
                        <line x1="21" y1="12" x2="9" y2="12" />
                    </svg>
                    <span>Cerrar Sesión</span>
                </button>
            </div>
        </header>

        <main class="main-content">
            <div class="content-wrapper">
                <div class="window">
                    <div class="window-header">
                        <h2 class="window-title">Gestión de Usuarios</h2>
                    </div>
                    <div class="window-content">
                        <div class="admin-controls">
                            <div class="search-container">
                                <input type="text" id="searchUsers" placeholder="Buscar usuarios...">
                                <button class="search-btn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="11" cy="11" r="8" />
                                        <line x1="21" y1="21" x2="16.65" y2="16.65" />
                                    </svg>
                                </button>
                            </div>
                            <div class="action-buttons">
                                <button class="admin-btn" id="addReviewer">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                                        <circle cx="9" cy="7" r="4" />
                                        <path d="M19 8v6" />
                                        <path d="M22 11h-6" />
                                    </svg>
                                    <span>Agregar Revisor</span>
                                </button>
                                <button class="admin-btn" id="assignRandomly">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M16 3h5v5" />
                                        <path d="M4 20L21 3" />
                                        <path d="M21 16v5h-5" />
                                        <path d="M15 15l5 5" />
                                        <path d="M4 4l5 5" />
                                    </svg>
                                    <span>Asignar Aleatoriamente</span>
                                </button>
                                <button class="admin-btn" id="addSpecialtyArea">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                        stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M12 5v14" />
                                        <path d="M19 11H5" />
                                    </svg>
                                    <span>Agregar Área</span>
                                </button>
                            </div>
                        </div>

                        <div class="users-list">
                            <div class="list-header">
                                <div class="filter-tabs">
                                    <button class="filter-btn active" data-filter="all">Todos</button>
                                    <button class="filter-btn" data-filter="revisor">Revisores</button>
                                    <button class="filter-btn" data-filter="ponente">Ponentes</button>
                                    <button class="filter-btn" data-filter="admin">Administradores</button>
                                </div>
                            </div>
                            <div class="users-grid" id="usersGrid">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- Modal para agregar revisor -->
    <dialog id="addReviewerModal" class="modal">
        <div class="modal-content">
            <h2>Convertir a Revisor</h2>
            <div class="form-group">
                <label for="userSearchInput">Buscar Usuario</label>
                <input type="text" id="userSearchInput" placeholder="Nombre o correo">
            </div>
            <div id="searchResultsContainer" class="search-results">
                <!-- Resultados de búsqueda se mostrarán aquí -->
            </div>
            <div class="modal-buttons">
                <button type="button" class="cancel-btn" onclick="closeModal()">Cancelar</button>
            </div>
        </div>
    </dialog>

    <!-- Modal para agregar área de especialidad -->
    <dialog id="addSpecialtyAreaModal" class="modal">
        <div class="modal-content">
            <h2>Agregar Área de Especialidad</h2>
            <div class="form-group">
                <label for="specialtyAreaName">Nombre del Área</label>
                <input type="text" id="specialtyAreaName" placeholder="Ingrese el nombre del área">
            </div>
            <div class="modal-buttons">
                <button type="button" class="cancel-btn" onclick="closeSpecialtyAreaModal()">Cancelar</button>
                <button type="button" class="submit-btn" onclick="addSpecialtyArea()">Agregar</button>
            </div>
        </div>
    </dialog>

    <!-- Bottom Navigation for Mobile -->
<nav class="bottom-nav">
    <div class="bottom-nav-items">
        <a href="#" class="bottom-nav-item" id="gestion-usuario-btn-mobile">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            </svg>

            <span>Gestión</span>
        </a>
        <a  href="#" class="bottom-nav-item" id="salas-ponencias-btn-mobile">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2"/>
                <path d="M3 9h18"/>
            </svg>
            <span>Salas</span>
        </a>
        <a href="#" class="bottom-nav-item" id="asignar-ponencia-btn-mobile">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
            <span>Ponencias</span>
        </a>
        <a href="#" class="bottom-nav-item" id="asignar-salas-btn-mobile">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 21l-7-5-7 5V5a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2z"/>
            </svg>
            <span>Asig.Salas</span>
        </a>
        <a href="#" class="bottom-nav-item" id="asignar-moderadores-btn-mobile">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
            </svg>
            <span>Mod</span>
        </a>
        </a>
        <a href="#" class="bottom-nav-item" id="logout-btn-mobile">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#ffffff">
                <path
                    d="M200-120q-33 0-56.5-23.5T120-200v-560q0-33 23.5-56.5T200-840h280v80H200v560h280v80H200Zm440-160-55-58 102-102H360v-80h327L585-622l55-58 200 200-200 200Z" />
            </svg>
            <span>Cerrar</span>
        </a>
    </div>
</nav>
    <script src="../scripts/admin.ts"></script>
</body>

</html>